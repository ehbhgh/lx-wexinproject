.btn_area {
  width: 95%;
  margin-top: 60rpx;
  margin-left: auto;
  margin-right: auto;
}
.btn_area button {
  background-image: linear-gradient(160deg, #88D0FF 0%, #a1e9f3 100%);
  color: #fff;
  font-weight: 600;
  border: none;
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.wrapper .tag_area {
  width: 80%;
  height: 340px;
  background-color: #fff;
  border-radius: 10rpx;
}
.wrapper .tag_area .btn_area {
  width: 90%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin: 40rpx auto 0;
}
.wrapper .tag_area .btn_area .btn {
  background-image: linear-gradient(160deg, #88D0FF 0%, #a1e9f3 100%);
  width: 250rpx;
  height: 80rpx;
  left: 0;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  border-radius: 16rpx;
}
.wrapper .tag_area .btn_area .cancel {
  background-image: linear-gradient(160deg, #88D0FF 0%, #a1e9f3 100%);
  width: 250rpx;
  height: 80rpx;
  left: 0;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  border-radius: 16rpx;
}
.wrapper .tag_area .tag_title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.wrapper .tag_area .tag_content {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
}
.wrapper .tag_area .tag_content .isable {
  pointer-events: none;
}
.wrapper .tag_area .tag_content .tag_item {
  box-shadow: 0rpx 0rpx 10rpx 2rpx #e0e3e6;
  margin-top: 30rpx;
  position: relative;
  width: 270rpx;
  height: 100rpx;
  border-radius: 12rpx;
  z-index: 2;
}
.wrapper .tag_area .tag_content .tag_item .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #fff;
  filter: alpha(opacity=60);
  opacity: 0.6;
  z-index: 3;
  top: 0;
  left: 0;
  pointer-events: none;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #a59e9e;
}
.wrapper .tag_area .tag_content .tag_item .bg .word {
  position: absolute;
  z-index: 4;
  font-size: 28rpx;
}
.wrapper .tag_area .tag_content .tag_item .click_area {
  width: 270rpx;
  height: 100rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}
.wrapper .tag_area .tag_content .tag_item .click_area > view:nth-child(1) {
  width: 60rpx;
  height: 60rpx;
  padding-left: 20rpx;
}
.wrapper .tag_area .tag_content .tag_item .click_area > view:nth-child(1) image {
  width: 60rpx !important;
  height: 100% !important;
}
.wrapper .tag_area .tag_content .tag_item .click_area > view:nth-child(2) {
  height: 50rpx;
  width: 150rpx;
  padding-left: 10rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.wrapper .tag_area .tag_content .tag_item .click_area > view:nth-child(3) {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  margin-right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrapper .tag_area .tag_content .tag_item .click_area > view:nth-child(3) image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.van-field__label {
  width: 300rpx;
}
.area {
  width: 500rpx;
}
.area .content {
  padding: 60rpx 0rpx;
  border-bottom: 2rpx solid #f2f2f2;
  text-align: center;
  margin: 0rpx auto;
  color: #aaa;
}
.area .btn {
  display: flex;
  justify-content: space-evenly;
}
.area .btn view {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.area .btn .cancel {
  color: #000;
  flex: 1;
  border-right: 2rpx solid #f2f2f2;
}
.area .btn .ok {
  flex: 1;
  color: #88D0FF;
}
