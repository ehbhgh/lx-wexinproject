  padding: 20rpx 0 20rpx 0;
  padding-left: 20rpx;
  border-left: 10rpx solid #88D0FF;
}
.container .content_require .content_require_content {
  padding-left: 30rpx;
}
.container .content_require .content_require_content view {
  margin-top: 25rpx;
}
