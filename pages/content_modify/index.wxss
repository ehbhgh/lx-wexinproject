}
.container .content_require .topic_area view {
  margin-bottom: 15rpx;
  font-weight: 600;
}
.container .content_require .topic_area input {
  width: 95%;
  height: 70rpx;
  border: 2rpx solid #ccc;
  padding-left: 20rpx;
}
.container .content_require .text_upload_area {
  padding-left: 20rpx;
}
.container .content_require .text_upload_area view {
  margin-bottom: 15rpx;
  font-weight: 600;
}
.container .content_require .text_upload_area textarea {
  width: 95%;
  border: 2rpx solid #ccc;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-right: 10rpx;
  white-space: pre-wrap;
  word-break: break-all;
  border-top-right-radius: 20rpx;
}
.container .content_require .pic_upload_area {
  padding-left: 20rpx;
  margin-top: 20rpx;
}
.container .content_require .pic_upload_area view {
  margin-bottom: 15rpx;
  font-weight: 600;
}
.container .content_require .audio_upload_area {
  padding-left: 20rpx;
}
.container .content_require .audio_upload_area view {
  margin-bottom: 15rpx;
  font-weight: 600;
}
