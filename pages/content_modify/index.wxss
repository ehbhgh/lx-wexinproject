}
.container .content_require .title_area view {
  margin-bottom: 15rpx;
  font-weight: 600;
}
.container .content_require .title_area input {
  width: 95%;
  height: 70rpx;
  padding-left: 20rpx;
  border: 2rpx solid #ccc;
}
.container .content_require .topic_area {
  padding-left: 20rpx;
