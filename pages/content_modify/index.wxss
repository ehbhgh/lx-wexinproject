  padding: 15rpx;
  width: 95%;
  border: 2rpx solid #ccc;
  line-height: 49rpx;
  color: #aaa;
  font-size: 29;
}
.container .content_require {
  border-bottom: 2rpx solid #ccc;
}
.container .content_require .title_area {
  margin-top: 30rpx;
