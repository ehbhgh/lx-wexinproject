page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
page .container {
  width: 100%;
  background-color: #f2f2f2;
  padding-bottom: 140rpx;
}
page .container .pay_message {
  width: 700rpx;
  margin-left: auto;
  margin-right: auto;
  width: 95%;
  background-color: #fff;
  border-radius: 15rpx;
}
page .container .pay_message .no_name_message {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  font-size: 50rpx;
  font-weight: 600;
  color: #e1e1e1;
}
page .container .pay_message .title {
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
  color: gray;
  background: #f0ecec;
  margin-top: 20rpx;
}
page .container .pay_message .message_area {
  padding-bottom: 20rpx;
}
page .container .pay_message .message_area .message_item {
  font-size: 26rpx;
}
page .container .pay_message .message_area .message_item view {
  width: 100%;
  margin-bottom: 32rpx;
  padding-left: 40rpx;
}
page .container .pay_message .message_area .message_item > view > text:nth-child(1) {
  width: 200rpx;
  display: inline-block;
  color: #4b4b4b;
}
page .container .pay_message .message_area .address {
  display: flex;
  font-size: 26rpx;
}
page .container .pay_message .message_area .address view:nth-child(1) {
  width: 200rpx;
  color: #4b4b4b;
  padding-left: 40rpx;
}
page .container .pay_message .message_area .address .address_item {
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page .container .name_message {
  margin: 40rpx auto 20rpx;
  width: 700rpx;
  background-color: #e1e1e1;
  border-radius: 15rpx;
  position: relative;
}
page .container .name_message .no_name_message {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #e1e1e1;
  background-color: #fff;
  font-size: 50rpx;
  font-weight: 600;
}
page .container .name_message .title {
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  font-weight: bold;
  font-size: 28rpx;
  padding-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: gray;
  background: #f0ecec;
}
page .container .name_message .has_name {
  width: 100%;
  height: 260rpx;
  background-color: #fff;
  margin: 0rpx auto 2rpx;
  display: flex;
  align-items: center;
  position: relative;
}
page .container .name_message .has_name .deletebtn {
  width: 120rpx;
  height: 50rpx;
  background-color: #fff;
  color: #88D0FF;
  border: 2rpx solid #88D0FF;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  line-height: 50rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 24rpx;
}
page .container .name_message .has_name .img_area {
  width: 110rpx;
  height: 104rpx;
  border-radius: 50%;
  background-color: #ffffff;
  box-shadow: 0 0 2rpx 2rpx #ffffff;
  margin-left: 76rpx;
}
page .container .name_message .has_name .img_area .douyin {
  height: 60rpx !important;
  margin-top: 20rpx;
}
page .container .name_message .has_name .img_area .blibli {
  height: 40rpx !important;
}
page .container .name_message .has_name .img_area image {
  width: 100%;
  height: 100%;
}
page .container .name_message .has_name .title_area {
  width: 400rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  margin-left: 60rpx;
  font-size: 28rpx;
}
page .container .name_message .has_name .title_area .title_name {
  display: flex;
  width: 400rpx;
}
page .container .name_message .has_name .title_area .title_name > text:nth-of-type(1) {
  color: #4b4b4b;
}
page .container .name_message .has_name .title_area .title_name > text:nth-of-type(2) {
  width: 190rpx;
  overflow: hidden;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page .container .name_message .has_name .title_area .fans_num {
  margin-bottom: 15rpx;
}
page .container .name_message .has_name .title_area .fans_num text {
  margin-right: 30rpx;
}
page .container .name_message .has_name .title_area .fans_num > text:nth-of-type(1) {
  color: #4b4b4b;
}
page .container .name_message .has_name .change_bt {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-left: 30rpx;
  color: #ffffff;
  background-color: #06a7d8;
  border-radius: 20rpx;
  font-weight: 600;
  margin-top: 15rpx;
}
page .no_container {
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 700;
  font-size: 50rpx;
  color: #ccc;
}
page .btn_area {
  width: 600rpx;
  height: 90rpx;
  background-color: #88D0FF;
  background-image: linear-gradient(160deg, #88D0FF 0%, #a1e9f3 100%);
  color: #fff;
  line-height: 90rpx;
  text-align: center;
  border-radius: 18rpx;
  margin-left: auto;
  margin-right: auto;
  font-size: 28rpx;
}
page .bottom_area {
  width: 100%;
  height: 140rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.area {
  width: 500rpx;
}
.area .content {
  padding: 60rpx 0rpx;
  border-bottom: 2rpx solid #f2f2f2;
  text-align: center;
  margin: 0rpx auto;
  color: #aaa;
}
.area .btn {
  display: flex;
  justify-content: space-evenly;
}
.area .btn view {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.area .btn .cancel {
  color: #000;
  flex: 1;
  border-right: 2rpx solid #f2f2f2;
}
.area .btn .ok {
  flex: 1;
  color: #88D0FF;
}
