page {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}
page .container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  width: 700rpx;
  height: 730rpx;
  margin-top: 220rpx;
}
page .container view {
  color: #777777;
  font-size: 40rpx;
}
page .container .bt_area {
  border-radius: 20rpx;
  width: 400rpx;
  height: 400rpx;
  border: 2rpx solid rgba(170, 170, 170, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
page .container .bt_area image {
  width: 400rpx;
  height: 400rpx;
}
page .container .bt_area view {
  width: 400rpx;
  height: 400rpx;
  color: #777777;
  font-size: 28rpx;
  line-height: 700rpx;
  text-align: center;
  border-radius: 60rpx;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}
.box2 {
  width: 600rpx;
  height: 100rpx;
  background: blue;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.box1 {
  width: 100rpx;
  height: 100rpx;
  background: red;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
