.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 2rpx solid #ccc;
    width: 650rpx;
    height: 500rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
   }
     
   .header image {
    width: 400rpx;
    height: 400rpx;
    /* border: 2rpx solid #ccc; */
   }
   .header .title{
       width: 300rpx;
       margin-top: 20rpx;
       text-align: center;
       color: #9d9d9d;
   }
     
   .content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
   }
     
   .content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
    margin-left: 15rpx;
   }
  
   .bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
   }