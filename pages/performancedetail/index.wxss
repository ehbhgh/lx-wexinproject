page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
page .container {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
page .container .detail .title {
  display: flex;
}
page .container .detail .title .icon {
  height: 40rpx;
  width: 2rpx;
  background-color: #f0ecec;
  padding-left: 10rpx;
  margin-right: 10rpx;
}
page .container .headers {
  width: 710rpx;
  margin: 20rpx auto 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
page .container .headers .title {
  font-size: 28rpx;
  padding-left: 20rpx;
  height: 40rpx;
  width: 400rpx;
  line-height: 40rpx;
}
page .container .headers .title > text:nth-child(2) {
  font-size: 29rpx;
}
page .container .headers .content_txt {
  width: 94%;
  display: block;
  line-height: 50rpx;
  margin: 0 auto 0rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  font-size: 26rpx;
  font-family: '宋体';
  letter-spacing: 4rpx;
  word-break: break-all;
  color: grey;
}
page .container .top_box {
  width: 710rpx;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 20rpx;
  font-family: '宋体';
}
page .container .top_box .henx {
  width: 100%;
  height: 2rpx;
  background-color: #f0ebeb;
}
page .container .top_box .header {
  height: 60rpx;
  padding-left: 20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: gray;
  background: #f0ecec;
}
page .container .top_box .box {
  margin-left: 40rpx;
}
page .container .top_box .box .write {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
}
page .container .top_box .box .write > view:nth-child(1) {
  width: 220rpx;
}
page .container .top_box .box .write > view:nth-child(2) text {
  display: inline-block;
  width: 400rpx;
  word-break: break-all;
  color: gray;
}
page .container .top_box .box > view {
  margin: 30rpx;
  font-size: 26rpx;
  padding-bottom: 20rpx;
}
page .container .top_box .box > view > text:nth-child(1) {
  display: inline-block;
  width: 220rpx;
}
page .container .top_box .box > view .city {
  width: 390rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page .container .top_box .box > view > text:nth-child(2) {
  color: gray;
}
.nav_title_area {
  position: relative;
  color: #fff;
}
.nav_title_area .nav_text {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}
.nav_title_area .nav_text image {
  width: 100%;
  height: 100%;
}
.nav_title_area .nav_title {
  position: absolute;
  top: 50%;
  left: 100rpx;
  transform: translateY(-50%);
  color: #fff;
  font-size: 28rpx;
}
