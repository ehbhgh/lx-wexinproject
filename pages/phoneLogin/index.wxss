.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 2rpx solid #ccc;
    width: 650rpx;
    height: 500rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
   }
     
   .header image {
    width: 400rpx;
    height: 400rpx;
    /* border: 2rpx solid #ccc; */
   }
   .header .title{
       width: 300rpx;
       margin-top: 20rpx;
       text-align: center;
       color: #9d9d9d;
   }
     
   .content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
   }
     
   .content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
    margin-left: 15rpx;
   }
  
   .bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
    background-color: #88D0FF;
    color: #fff;
   }
   .area{
       display: flex;
       /* background-color: #ccc; */
        margin-left: 250rpx;
       width: 500rpx;
       margin-bottom: 30rpx;
      
   }
   .area>view:nth-child(2){
 color: #9d9d9d;
   }
   .area>view:nth-child(1){
       width: 120rpx;
       color: #aaa;
       font-weight: bold;
   }
   .area .img{
         width: 50rpx;
         height: 50rpx;
         border-radius: 50%;
         margin-left: 20rpx;
   }
   .area image{
       width: 100%;
       height: 100%;
       border-radius: 50%;
   }